@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>




<title>  Manage User Account</title>


<hi></hi>

@if (Model.Any())
{
    
    foreach (var identityUser in Model)
    {


<div class="card mb-3">
    <div class="card-header">
       
            <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Register">Register New User</a>
       
    </div>
    <div class="card"> 
        <div class=" card-header">
            User ID:@identityUser.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">User Names: @identityUser.UserName</h5>
        </div>

       
        <div class="from-group row">
            <div class="col-sm-10">
                <div class="card-footer">
                    <form method="post" asp-action="DeleteUser" asp-route-id="@identityUser.Id">
                        <a asp-action="EditUser" asp-controller="Admin"
                           asp-route-id="@identityUser.Id" class="btn btn-primary">Edit</a>


                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </div>



            </div>
        </div>
            </div>
    </div>

    }



}
else {

<div class ="card">
    <div class=" card-header">
        No users created yet
    </div>
    <h5 div class=" card-title">
        Use the button below to create a user
    </h5>
    <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">Add new user</a>
</div>



}